{
  "extends": "@plane/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/core/*"],
      "@/styles/*": ["src/styles/*"],
      "@/plane-editor/*": ["src/ce/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules"]
}
